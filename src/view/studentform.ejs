<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Create Student</h5>
        </div>
        <div class="card-body">
            <form action="/students" method="post">
               
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="batch">Batch</label>
                    <input type="text" class="form-control" id="batch" name="batch" required>
                </div>

                <div class="groupedDiv">
                    <div class="form-group">
                        <label for="college">College</label>
                        <input type="text" class="form-control" id="college" name="college" required>
                    </div>
                    <div class="form-group">
                        <label for="status">Status</label>
                        <select class="form-control" id="status" name="status" required>
                            <option value="placed">Placed</option>
                            <option value="not_placed">Not Placed</option>
                        </select>
                    </div>

                </div>


                <div class="groupedDiv">
                    <div class="form-group">
                        <label for="DSAFinalScore">DSA Final Score</label>
                        <input type="number" class="form-control" id="DSAFinalScore" name="DSAFinalScore" required>
                    </div>
                    <div class="form-group">
                        <label for="WebDFinalScore">WebD Final Score</label>
                        <input type="number" class="form-control" id="WebDFinalScore" name="WebDFinalScore" required>
                    </div>
                    <div class="form-group">
                        <label for="ReactFinalScore">React Final Score</label>
                        <input type="number" class="form-control" id="ReactFinalScore" name="ReactFinalScore" required>
                    </div>
                </div>
                <div class="groupedDiv">
                    <div class="form-group">
                        <label for="attendedInterview">Attened Interview?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="attendedInterview"
                                name="attendedInterview">
                            <label class="form-check-label" for="attendedInterview">Yes</label>
                        </div>
                    </div>


                    <div id="attendInterviewDiv">
                        <div id="addInterviewDetailsbtn" class="btn btn-primary" style="margin-left: auto;">+ add
                            more</div>
                        <div id="interviewDetailsAttend" class="groupedDiv" style="display: none;">

                            <div class="form-group">
                                <label for="company">Select Company</label>
                                <select class="form-control" id="company" name="company">

                                    <% companies.forEach(company=> { %>
                                        <option value="<%= company.name %>">
                                            <%= company.name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="result">result</label>
                                <select class="form-control" id="result" name="result">
                                    <!-- "PASS", "FAIL", "On Hold", "Didn’t Attempt" -->
                                    <option value="PASS">PASS</option>
                                    <option value="FAIL">FAIL</option>
                                    <option value="On Hold">On Hold</option>
                                    <option value="Didn’t Attempt">Didn’t Attempt</option>
                                </select>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="groupedDiv">
                    <div class="form-group">
                        <label for="scheduleInterview">Schedule Interview?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="scheduleInterview"
                                name="scheduleInterview">
                            <label class="form-check-label" for="scheduleInterview">Yes</label>
                        </div>
                    </div>

                    <div id="interviewDetails" style="display: none;">
                        <div class="form-group">
                            <label for="interviewCompany">Select Company</label>
                            <select class="form-control" id="interviewCompany" name="interviewCompany">

                                <% companies.forEach(company=> { %>
                                    <option value="<%= company.name %>">
                                        <%= company.name %>
                                    </option>


                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="interviewDate">Interview Date</label>
                            <input type="date" class="form-control" id="interviewDate" name="interviewDate">
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Create Student</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('scheduleInterview').addEventListener('change', function () {
        var interviewDetails = document.getElementById('interviewDetails');
        if (this.checked) {
            interviewDetails.style.display = 'block';
        } else {
            interviewDetails.style.display = 'none';
        }
    });
    document.getElementById('attendedInterview').addEventListener('change', function () {
        var interviewDetails = document.getElementById('attendInterviewDiv');
        if (this.checked) {
            interviewDetails.style.display = 'block';
        } else {
            interviewDetails.style.display = 'none';
        }
    });
    document.getElementById("addInterviewDetailsbtn").addEventListener("click", () => {
        // Clone the interview details section
        const btn = document.getElementById("addInterviewDetailsbtn");
        let interviewDetailsAttend = document.getElementById("interviewDetailsAttend").cloneNode(true);

        // Show the cloned section
        interviewDetailsAttend.style.display = "block";

        // Append the cloned section to the parent element
        let attendInterviewDiv = document.getElementById("attendInterviewDiv");

        attendInterviewDiv.appendChild(interviewDetailsAttend);

    });
</script>